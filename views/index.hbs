<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-2 col-12 mx-auto">
      <a href="./restaurants/new" class="btn btn-major">Add a new restaurant</a>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="container mt-4">
          <div class="row">
            <a href="/restaurants/{{this._id}}" class="text-secondary restaurant-card">
              <div class="card mb-3">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>
                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils pr-2"></i> {{this.category}}
                  </div>
                  <span class="badge rounded-pill bg-danger">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>
                </div>
              </div>
            </a>
          </div>
          <div class="row justify-content-sm-end me-2">
            <div class="col-2"><a href="./restaurants/{{this._id}}">detail</a></div>
            <div class="col-2"><a href="./restaurants/{{this._id}}/edit">edit</a></div>
            <div class="col-2"><a href="./restaurants/{{this._id}}/delete">delete</a></div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>